generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String   // Hashed with Argon2
  refreshToken String?
  deletedAt    DateTime? @softDelete
  createdAt    DateTime @default(now())
}
